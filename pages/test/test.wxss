.topbar {
  width: 100%;
  height: 45px;
  /* background-color: pink; */
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
}
 
.row {
  display: flex;
  justify-content: center;
  align-items: center;
}
 
.arrow-box {
  width: 10%;
  height: 100%;
  /* background-color: #fe6969; */
  float: left;
}
 
.arrow-box image {
  width: 14px;
  height: 16px;
  transform: rotateY(180deg);
}
 
.input-box {
  width: 52%;
  height: 100%;
  /* background-color: #eee; */
  justify-content: center;
  align-items: center;
  float: left;
  margin-left: 3%;
}
 
.input-box input {
  font-size: 12px;
  color: #333;
  width: 93%;
  height: 30px;
  background-color: #f2f2f2;
  border-radius: 44rpx;
  padding-left: 7%;
}
 
.top-comend {
  width: 100%;
  height: 45px;
}