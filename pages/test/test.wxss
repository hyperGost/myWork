/* pages/test/test.wxss */
  .count{
    background: #000;
    opacity: 0.8;
    position: absolute;
    height: 30rpx;
    border-radius: 0 20rpx;
    font-weight: 500;
    left: 0;
    bottom: 0;
    color: white;
    font-size: 20rpx;
    text-align: center;
    line-height: 30rpx;
    padding: 0 10rpx;
  }
.topbar {
  width: 100%;
  height: 72rpx;
  position: fixed;
  top: 0;
  left: 0;
  padding-left: 25rpx;
  padding-bottom: 119rpx;
  z-index: 998;
  background: #fff;
  box-sizing: content-box;
}
.topbar .back_icon image{
  width: 20rpx;
  height: 38rpx;
}
.topbar .serch_box{
  width: 434rpx;
  height: 72rpx;
  border-radius: 36rpx;
  background: #F2F4F5;
  margin-left: 25rpx;
}
.topbar .serch_box .serch_img{
  width: 32rpx;
  height: 32rpx;
  margin-right: 15rpx;
}
.container{
  padding-right: 32rpx;
  margin-left: 198rpx;
  margin-top: 102rpx;
}
.container .left_nav_box{
  position: fixed;
  z-index: 999;
  width: 174rpx;
  background: #F2F4F5;
  left: 0;
  height: 100%;
}
.container .left_nav_box .left_nav_item{
  position: relative;
  padding: 32rpx 0rpx;
  font-size: 28rpx;
  color: #657180;
  text-align: center;
}
.container .left_nav_box .left_nav_item.nav_active{
  color: #00AFDB;
  background: #fff;
}
.container .left_nav_box .left_nav_item.nav_active::before{
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 28rpx;
  background-color:#00AFDB;
}
.container .right_content_box{
  width: 100%;
  overflow: hidden;
  /* margin-top: 32rpx; */
  align-self: flex-start;
  flex:1;
}
.container .right_content_box .top_bar_box{
  position: fixed;
  z-index: 999;
  line-height: 38rpx;
  width: 520rpx;
}
.container .right_content_box .top_bar_box .top_bar_item{
  font-size: 24rpx;
  font-weight: bold;
  line-height: 24rpx;
  margin-right: 39rpx;
  flex: 1;
  color: #9ea7b4;
}
.container .right_content_box .top_bar_box .test_number_box{
  font-size: 20rpx;  
  color: #9EA7B4;
}
.container .right_content_box .top_bar_box .test_number_box .test_number{
  color: #17233D;
}
.container .right_content_box .test_item_box{
  min-width: 0;
  overflow: hidden;
  margin-bottom: 48rpx;
  height: 160rpx;
}
.container .right_content_box .test_item_box .box_left{
  margin-right: 24rpx;
  flex-shrink: 0;
  width: 160rpx;
  height: 160rpx;
  overflow: hidden;
  border-radius: 20rpx;
  position: relative;
}
.container .right_content_box .test_item_box .box_left image{
  width: 100%;
  height: 100%;
}

.container .right_content_box .test_item_box .box_right{
  min-width: 0rpx;
  height: 100%;
}
.container .right_content_box .test_item_box .box_right .title{
    font-size: 32rpx;
    font-weight: bold;
    color: #17233D;
}

.container .right_content_box .test_item_box .box_right .desc{
  font-size: 28rpx;
  color: #657180;
}
.container .right_content_box .test_item_box .box_right .box_bottom{
  width: 100%;
}
.container .right_content_box .test_item_box .box_right .box_bottom button[role]{
  width: 110rpx;
  height: 40rpx;
  background: #FFFFFF;
  border: 1px solid #00AFDB;
  border-radius: 20rpx;
  color: #00AFDB;
  font-size: 20rpx;
}
.container .right_content_box .test_item_box .box_right .box_bottom .price{
  font-size:28rpx;
  color: #FF2323;
}
.container .right_content_box .test_item_box .box_right .box_bottom .units{
  font-size: 20rpx;
  color: #FF2323;
}
.container .right_content_box .test_item_box .box_right .box_bottom .before_discount{
  padding-left: 18rpx;
  text-decoration: line-through;
  color: #9EA7B4;
  font-size: 20rpx;
}