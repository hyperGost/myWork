/* pages/consult/consult.wxss */
.topbar{
    width: 100%;
    height: 72rpx;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
}
.topbar .nav_title{
  height: 100%;
  width: 100%;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #17233D;
  line-height: 72rpx;
}
.topbar navigator{
  position: absolute;
  left: 16rpx;
  top: 50%;
  transform: translateY(-50%);
}
.container{
  padding: 0 32rpx;
}
.container .doctor_box{
  height: 216rpx;
  margin-bottom: 48rpx;
}
.container .doctor_box .box_left{
  width: 180rpx;
  height: 216rpx;
  border-radius: 20rpx;
  overflow: hidden;
  margin-right: 24rpx;
}
.container .doctor_box .box_left image{
  width: 100%;
  height: 100%;
}
.container .doctor_box .box_right .name_box .name{
  font-size: 40rpx;
  font-weight: bold;
  color: #17233D;
}
.container .doctor_box .box_right .title{
  font-size: 28rpx;
  font-weight: bold;
  color: #464C5B;
}
.container .doctor_box .box_right .desc{
  margin-top: -15rpx;
}
.container .doctor_box .box_right .desc .experience_box{
  margin-top: 4rpx;
}
.container .doctor_box .box_right .experience_box .hour-box{
  margin-right: 10rpx;
}
.container .doctor_box .box_right .experience_box text{
  font-size: 24rpx;
  font-weight: bold;
  color: #17233D;
}
.container .doctor_box .box_right .experience_box text:not([class]){ 
  color: #9EA7B4;
}
.container .doctor_box .box_right .label_box .label{
  background: #EFF8F8;
  border-radius: 16px;
  font-size: 20rpx;
  color: #657180;
  margin-right: 16rpx;
  padding: 0 8rpx;
}

